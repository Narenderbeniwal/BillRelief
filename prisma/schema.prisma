// BillRelief.com - HLD Database Schema
// PostgreSQL with Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  passwordHash      String    @map("password_hash")
  name              String?
  emailVerified     DateTime? @map("email_verified")
  image             String?
  stripeCustomerId   String?   @map("stripe_customer_id")
  subscriptionTier  String?   @map("subscription_tier") // free, basic, premium
  bio               String?   @db.Text
  socialLinks       Json?     @map("social_links")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  accounts          Account[]
  sessions          Session[]
  medicalBills       MedicalBill[]
  negotiationCases  NegotiationCase[]
  payments          Payment[]
  blogPosts         BlogPost[]
  comments          Comment[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// HIPAA: audit log for access to PHI (e.g. bill file download)
model AuditLog {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  action       String   // e.g. "bill_file_download", "bill_list"
  resourceType String   @map("resource_type") // e.g. "MedicalBill"
  resourceId   String   @map("resource_id")
  ipAddress    String?  @map("ip_address") @db.VarChar(45)
  userAgent    String?  @map("user_agent") @db.Text
  createdAt    DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

enum BillStatus {
  pending
  analyzing
  completed
  failed
}

model MedicalBill {
  id                  String    @id @default(cuid())
  userId              String    @map("user_id")
  fileUrl             String?   @map("file_url")
  fileName            String?   @map("file_name")
  fileType            String?   @map("file_type") // pdf, jpg, png
  uploadDate          DateTime  @default(now()) @map("upload_date")
  status              BillStatus @default(pending)
  providerName        String?   @map("provider_name")
  billDate            DateTime? @map("bill_date")
  totalAmount         Decimal?  @map("total_amount") @db.Decimal(12, 2)
  estimatedSavings    Decimal?  @map("estimated_savings") @db.Decimal(12, 2)
  analysisCompletedAt DateTime? @map("analysis_completed_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lineItems           BillLineItem[]
  aiAnalysisResults   AiAnalysisResult[]
  negotiationCases    NegotiationCase[]
}

model BillLineItem {
  id              String    @id @default(cuid())
  billId          String    @map("bill_id")
  description     String?   @db.Text
  cptCode         String?   @map("cpt_code")
  icd10Code       String?   @map("icd10_code")
  quantity        Int       @default(1)
  unitPrice       Decimal?  @map("unit_price") @db.Decimal(12, 2)
  totalCharge     Decimal?  @map("total_charge") @db.Decimal(12, 2)
  isError         Boolean   @default(false) @map("is_error")
  errorType       String?   @map("error_type") // duplicate, unbundling, upcoding, quantity
  fairPrice       Decimal?  @map("fair_price") @db.Decimal(12, 2)
  overchargeAmount Decimal? @map("overcharge_amount") @db.Decimal(12, 2)
  medicalBill     MedicalBill @relation(fields: [billId], references: [id], onDelete: Cascade)
}

model AiAnalysisResult {
  id                String    @id @default(cuid())
  billId            String    @map("bill_id")
  modelUsed         String    @map("model_used") // claude, gpt4
  promptTokens      Int?      @map("prompt_tokens")
  completionTokens  Int?      @map("completion_tokens")
  cost              Decimal?  @db.Decimal(10, 6)
  analysisJson      Json?     @map("analysis_json")
  confidenceScore   Decimal?  @map("confidence_score") @db.Decimal(3, 2)
  reviewedByHuman   Boolean   @default(false) @map("reviewed_by_human")
  humanReviewNotes  String?   @map("human_review_notes") @db.Text
  createdAt         DateTime  @default(now()) @map("created_at")
  medicalBill       MedicalBill @relation(fields: [billId], references: [id], onDelete: Cascade)
}

enum CaseStatus {
  pending
  in_progress
  resolved
}

model NegotiationCase {
  id               String    @id @default(cuid())
  billId           String    @map("bill_id")
  userId           String    @map("user_id")
  status           CaseStatus @default(pending)
  assignedTo       String?   @map("assigned_to")
  createdAt        DateTime  @default(now()) @map("created_at")
  resolvedAt       DateTime? @map("resolved_at")
  originalAmount   Decimal?  @map("original_amount") @db.Decimal(12, 2)
  finalAmount      Decimal?  @map("final_amount") @db.Decimal(12, 2)
  savingsAmount    Decimal?  @map("savings_amount") @db.Decimal(12, 2)
  savingsPercentage Decimal? @map("savings_percentage") @db.Decimal(5, 2)
  medicalBill      MedicalBill @relation(fields: [billId], references: [id], onDelete: Cascade)
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments         Payment[]
}

enum PaymentStatus {
  pending
  completed
  failed
  refunded
}

model Payment {
  id                    String        @id @default(cuid())
  userId                String        @map("user_id")
  caseId                String?       @map("case_id")
  amount                Decimal       @db.Decimal(12, 2)
  feeType               String?      @map("fee_type") // flat, percentage
  stripePaymentIntentId String?       @map("stripe_payment_intent_id")
  status                PaymentStatus @default(pending)
  createdAt             DateTime      @default(now()) @map("created_at")
  paidAt                DateTime?     @map("paid_at")
  user                  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  negotiationCase       NegotiationCase? @relation(fields: [caseId], references: [id], onDelete: SetNull)

  @@map("payments")
}

model BlogPost {
  id                String    @id @default(cuid())
  slug              String    @unique
  title             String
  subtitle          String?   @db.Text
  contentHtml       String    @db.Text
  excerpt           String?   @db.Text
  featuredImage     String?   @map("featured_image")
  coverImage        String?   @map("cover_image")
  category          String    @default("General")
  tags              String[]  @default([])
  metaTitle         String?   @map("meta_title")
  metaDescription   String?   @map("meta_description") @db.Text
  status            String    @default("draft")
  published         Boolean   @default(false)
  publishedAt       DateTime? @map("published_at")
  authorId          String    @map("author_id")
  views             Int       @default(0)
  readTime          Int?      @map("read_time")
  commentsEnabled   Boolean   @default(true) @map("comments_enabled")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  author   User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@index([authorId])
  @@index([status])
  @@index([category])
  @@index([publishedAt])
  @@map("blog_posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  postId    String   @map("post_id")
  authorId  String   @map("author_id")
  parentId  String?  @map("parent_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  post    BlogPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  author  User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}
